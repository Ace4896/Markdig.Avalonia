<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <StackPanel Margin="20">
      <TextBlock>
        <Span>Normal</Span>
        <LineBreak />
        <Span Classes="md-bold">Bold</Span>
        <LineBreak />
        <Span Classes="md-italics">Italics</Span>
        <LineBreak />
        <Span Classes="md-bold md-italics">Bold and Italics</Span>
      </TextBlock>
    </StackPanel>
  </Design.PreviewWith>

  <Style Selector="Span.md-bold">
    <Setter Property="FontWeight" Value="Bold" />
  </Style>

  <Style Selector="Span.md-italics">
    <Setter Property="FontStyle" Value="Italic" />
  </Style>
</Styles>
